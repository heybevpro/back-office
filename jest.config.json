{
  "preset": "ts-jest",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.test\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/test/**"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "coveragePathIgnorePatterns": [
    "/src/main.ts",
    "/src/app.module.ts",
    "/src/modules\/.+\\.module\\.ts$",
    "/src/config/",
    "/src/utils/constants/",
    "/src/utils/validations/environment.validation.ts",
    "/src/migrations/*",
    "/src/entities/"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}